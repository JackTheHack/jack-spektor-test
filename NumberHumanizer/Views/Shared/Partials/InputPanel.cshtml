<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <form name="mainform" id="mainform">
                <div class="form-group">
                    <label for="usr">Name:</label>
                    <input type="text" class="form-control" name="Name" placeholder="John Doe" required="required">
                </div>
                <div class="form-group">
                    <label for="pwd">Number:</label>
                    <textarea class="form-control" rows="5" name="Number" maxlength="10" placeholder="Any number up to 2147483647" required="required"></textarea>
                </div>
                <div class="form-group">
                    <span class="validation-summary-errors hidden"></span>
                    <button class="btn btn-default btn-info" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>